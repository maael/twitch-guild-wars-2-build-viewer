{
  "name": "twitch-guild-wars-2-build-viewer",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Matthew Elphick <matt.a.elphy@gmail.com> (https://mael.tech)",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier --ignore-path .gitignore --write",
    "lint": "eslint --ext .ts,.tsx -c .eslintrc --ignore-path .gitignore",
    "export": "next build && rm -r out extension.zip && next export && (cd out && zip -r ../extension.zip ./*)",
    "export-js": "dotenv-extended node scripts/build.js && rm -rf extension.zip && (cd output && zip -r ../extension.zip ./*)"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,md,mdx,css}": "yarn prettier",
    "*.{tsx,ts}": [
      "yarn lint --fix",
      "yarn prettier"
    ]
  },
  "dependencies": {
    "@sentry/react": "^6.8.0",
    "@sentry/tracing": "^6.8.0",
    "fathom-client": "^3.0.0",
    "next": "^10.2.3",
    "next-seo": "^4.24.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-tippy": "^1.4.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.4",
    "@babel/eslint-plugin": "^7.13.16",
    "@types/node": "^15.12.1",
    "@types/react": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "dotenv-extended": "^2.9.0",
    "esbuild": "^0.12.6",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  }
}
